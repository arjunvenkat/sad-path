<div class="row">
<div class="col-md-6 col-md-offset-3">
    <h1>Listing Roadblocks</h1>
    <div class="list-group roadblocks-list">
      <% @roadblocks.each do |roadblock| %>
        <%= link_to(roadblock, class: "list-group-item") do %>
          <h5 class="list-group-item-heading">
            <%= truncate(roadblock.error_message, length: 60)%>
          </h5>
          <p class="list-group-item-text">
            <%= truncate(roadblock.description, length: 160)  %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
