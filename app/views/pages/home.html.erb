<div class="row">
  <%= form_for(Roadblock.new, html: {class: "col-md-6"}) do |f| %>
    <h2>Where are you stuck?</h2>
    <div class="form-group">
      <%= f.label :error_message, "Error Message (if applicable)" %>
      <%= f.text_area :error_message, placeholder: "ex) SyntaxError in Pages#home", class: "form-control", rows: 3 %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description (if applicable)" %>
      <%= f.text_area :description, placeholder: "I was trying to loop through all users",class: "form-control", rows: 10 %>
    </div>
    <div class="form-group">
      <%= f.label :code_snippet, "Code Snippet (if applicable)" %>
      <%= f.text_area :code_snippet, class: "form-control", rows: 10 %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-lg btn-default" %>
    </div>
  <% end %>
  <div class="col-md-6">
    <h2>Recent Roadblocks</h2>
    <div class="list-group roadblocks-list">
      <% @recent_roadblocks.try(:each) do |roadblock| %>
        <%= link_to(roadblock, class: "list-group-item") do %>
          <h5 class="list-group-item-heading">
            <%= truncate(roadblock.error_message, length: 60)%>
          </h5>
          <p class="list-group-item-text">
            <%= truncate(roadblock.description, length: 160)  %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

