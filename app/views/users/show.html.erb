
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p id="notice"><%= notice %></p>


    <h1>Your info</h1>
    <p>
      <strong>First name:</strong>
      <%= @user.first %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @user.last %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <% if @user.id == session[:user_id].to_i || @user.id == session[:user2_id].to_i %>
      <%= link_to 'Edit your info', edit_user_path(@user) %>
      <%#= link_to 'Destroy your account', user_path(@user), method: :delete, data: { confirm: "Are you sure?"}  %>
    <% end %>

  </div>
</div>



