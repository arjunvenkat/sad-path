

<div class="form-group col-md-3 col-md-offset-4">
<h1>Login</h1>
<%= form_tag('/sessions/create') do %>
  <div class="form-group">
    <%= label_tag "email" %>
    <%= text_field_tag "email", "", placeholder: "enter your email", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag "password" %>
    <%= password_field_tag "password", "", placeholder: "enter your password", class: "form-control" %>
  </div>
  <%= submit_tag "Submit", {class: "btn"} %>
<% end -%>
</div>
